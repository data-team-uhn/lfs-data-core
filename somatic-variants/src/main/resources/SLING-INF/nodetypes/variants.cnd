<sling = 'http://sling.apache.org/jcr/sling/1.0'>
<lfs = 'https://lfs.ccm.sickkids.ca/'>

//-----------------------------------------------------------------------------
//
// Variants
//
//-----------------------------------------------------------------------------
// Special answer to store variants .csv files
[lfs:SomaticVariantsAnswer] > lfs:Answer

  // Hardcode the resource type.
  - sling:resourceType (STRING) = "lfs/SomaticVariantsAnswer" mandatory autocreated protected

  // Hardcode the resource supertype.
  - sling:resourceSuperType (STRING) = "lfs/Answer" mandatory autocreated protected

  // The variant file is stored here as a .csv file
  + * = nt:file
